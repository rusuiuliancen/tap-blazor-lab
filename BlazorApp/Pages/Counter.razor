@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @StartingCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    [Parameter]
    public int StartingCount { get; set; } = 0;

    private void IncrementCount()
    {
        StartingCount++;
    }
}
